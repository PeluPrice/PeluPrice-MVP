# PeluPrice Application Configuration

# Application
APP_NAME=PeluPrice
APP_VERSION=1.0.0
DOMAIN=peluprice.com
ENVIRONMENT=development

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://peluprice:peluprice123@db:5432/peluprice
POSTGRES_DB=peluprice
POSTGRES_USER=peluprice
POSTGRES_PASSWORD=peluprice123

# For development with SQLite (fallback)
SQLITE_DATABASE_URL=sqlite:///./peluprice.db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# MQTT Configuration
MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_USERNAME=peluprice
MQTT_PASSWORD=peluprice123
MQTT_CLIENT_ID=peluprice-backend

# Redis Configuration (for caching/sessions)
REDIS_URL=redis://redis:6379/0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_MQTT_URL=ws://localhost:9001/mqtt
NEXT_PUBLIC_DOMAIN=peluprice.com

# Device Configuration
DEVICE_ACTIVATION_KEY_LENGTH=16
DEVICE_DEFAULT_STATUS=created
MAX_DEVICES_PER_USER=10

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@peluprice.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@peluprice.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,txt

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Development/Debug
DEBUG=true
RELOAD=true
